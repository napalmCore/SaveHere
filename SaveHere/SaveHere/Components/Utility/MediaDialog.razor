<MudDialog>
  <DialogContent>
    <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; margin-top:1rem;">
      @if (IsVideo)
      {
        <video controls style="max-width: 100%; max-height: 90vh;">
          <source src="@MediaUrl" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      }
      else if(IsAudio)
      {
        <audio controls style="max-width: 100%; max-height: 90vh;">
          <source src="@MediaUrl" type="audio/mpeg">
          Your browser does not support the audio tag.
        </audio>
      }
      else
      {
        <span>Nothing To Show!</span>
      }
    </div>
  </DialogContent>
</MudDialog>

@code {
  [CascadingParameter]
  private MudDialogInstance MudDialog { get; set; } = default!;

  [Parameter]
  public string MediaUrl { get; set; } = "";

  [Parameter]
  public bool IsVideo { get; set; } = false;
  
  [Parameter]
  public bool IsAudio { get; set; } = false;

  private void Close() => MudDialog.Close();
}